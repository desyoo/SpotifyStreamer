


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    tools:context="com.example.desy.spotifystreamer.app.MainActivity">

        <!--
+    This layout is a two-pane layout for the Items master/detail flow.
+    -->

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_artist"
        android:name="com.example.desy.spotifystreamer.fragment.SearchArtistFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:context="com.example.desy.spotifystreamer.fragment.SearchArtistFragment"
        tools:layout="@android:layout/list_content" />


    <FrameLayout
    android:id="@+id/topTrack_detail_container"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="4" />

</LinearLayout>
